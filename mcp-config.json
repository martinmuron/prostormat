{
  "mcpServers": {
    "prostormat-submissions": {
      "description": "Prostormat manual venue submission processing",
      "endpoints": {
        "submitVenueRequest": {
          "url": "/api/venue-submissions",
          "method": "POST",
          "description": "Uloží žádost o přidání/claim prostoru nebo zájem o Priority balíček"
        }
      },
      "capabilities": [
        "venue_submission_tracking",
        "claim_management",
        "priority_interest_tracking",
        "manual_follow_up_notifications"
      ]
    },
    
    "prostormat-supabase": {
      "description": "Prostormat Supabase database operations",
      "database": {
        "host": "your-database-host",
        "port": 5432,
        "database": "your-database-name",
        "ssl": true
      },
      "tables": [
        "prostormat_users",
        "prostormat_venues", 
        "prostormat_venue_broadcasts",
        "prostormat_email_flow_logs",
        "prostormat_event_requests"
      ],
      "capabilities": [
        "user_management",
        "venue_management", 
        "payment_tracking",
        "email_logging",
        "event_management"
      ]
    },

    "prostormat-vercel": {
      "description": "Prostormat Vercel deployment and hosting",
      "deployment": {
        "platform": "vercel",
        "domain": "prostormat.cz",
        "framework": "Next.js 15.3.4"
      },
      "endpoints": {
        "production": "https://prostormat.cz",
        "preview": "https://prostormat-*.vercel.app"
      },
      "capabilities": [
        "automatic_deployment",
        "serverless_functions",
        "edge_runtime",
        "analytics",
        "cdn_optimization"
      ]
    }
  },

  "integrations": {
    "supabase": {
      "projectRef": "your-project-ref",
      "features": [
        "PostgreSQL Database",
        "Point-in-time Recovery",
        "Automatic Backups",
        "SSL Connections"
      ]
    },

    "vercel": {
      "deploymentUrl": "https://prostormat.cz",
      "features": [
        "Automatic HTTPS",
        "Global CDN",
        "Serverless Functions",
        "Preview Deployments"
      ]
    }
  },

  "workflows": {
    "venue_submission": {
      "steps": [
        "User fills venue form",
        "Žádost je uložena do tabulky venue_submissions",
        "Tým Prostormat kontaktuje uživatele a domluví fakturaci",
        "Admin ručně označí venue jako zaplacené",
        "Venue je schváleno a zveřejněno",
        "Potvrzení odchází emailem"
      ],
      "services": ["supabase", "vercel"]
    },

    "venue_approval": {
      "steps": [
        "Admin views pending venues",
        "Admin approves venue",
        "Venue status updated to published",
        "Approval email sent to owner"
      ],
      "services": ["supabase", "vercel"]
    }
  },

  "monitoring": {
    "supabase": {
      "database": "11MB current size",
      "backups": "7-day point-in-time recovery",
      "monitoring": "Built-in Supabase analytics"
    },
    "vercel": {
      "deployments": "Automatic via Git push",
      "analytics": "Built-in Vercel analytics",
      "performance": "Edge CDN optimization"
    }
  }
}
