    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "cheerio": "^1.1.2",
    "eslint": "^9.30.1",
    "eslint-config-next": "^15.3.4",
    "playwright": "^1.56.0",
    "prisma": "^6.11.0",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed-clean.ts"
  }
}
